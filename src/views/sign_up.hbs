<div class="switch">
    <button id="personbtn" class="but-person" >Person</button>
    <button id="businessbtn"class="but-business" >Business</button>
    <p>{{msg}}</p>
</div>

<div  id="persondiv" class="div-person" >
    <label for="email">
        <input type="email" id="personemail" placeholder="Email" required>
    </label>
    <label for="username">
        <input type="text" id="username" placeholder="Username" required>
    </label>
    <label for="pass">
        <input type="password" id="personpass" placeholder="Password" required>
    </label>
    <label for="confpass">
        <input type="password" id="personconfpass" placeholder="Confirm password" required>
    </label>
    <label for="f-name">
        <input type="text" id="f-name" placeholder="First name" required>
    </label>
    <label for="l-name">
        <input type="text" id="l-name" placeholder="Last name" required>
    </label>
     <p id="personerr" class="errorValid"></p>
    <br>
    <label for="gender" >Gender :
        <input type="radio" id="male" name="gender" value="male"> Male
        <input type="radio" id="female" name="gender" value="female"> Female
    </label>
    <br>

    <label for="birth"> Birth :
        <input type="date" id="birth" required>
    </label>

    <button type="submit" id="personsend">Send</button>
</div>

<div id="businessdiv"class="div-business"  style="display: none">
    <label for="email">
        <input type="email" id="businessemail" placeholder="Email" required>
    </label>

    <label for="name">
        <input type="text" id="businessname" placeholder="Business name" required>
    </label>

    <label for="pass">
        <input type="password" id="businesspass" placeholder="Password" required>
    </label>

    <label for="confpass">
        <input type="password" id="businessconfpass" placeholder="Confirm password" required>
    </label>

    <label for="address">
        <input type="text" id="address" placeholder="Address" required>
    </label>

    <label for="description">
        <input type="text" id="description" placeholder="Description" required>
    </label>
    <label for="select menu" >
      <select id="category">
        <option value="restaurant">restaurant</option>
        <option value="cafe">cafe</option>
        <option value="park">park</option>
      </select>
    </label>

    <label for="image"> image :
        <input type="url" id="image" required>
    </label>
    <p id="businesserr" class="errorValid"></p>

    <button type="submit" id="businessend">Send</button>
</div>
